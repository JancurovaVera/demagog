<% if speaker.avatar.attached? %>
  <figure class="portrait">
    <% if local_assigns[:lazy_load_images] == false %>
      <img class="lazy-load" data-src="<%= rails_public_blob_url(speaker.avatar) %>" alt="<%= speaker.full_name %>">
    <% else %>
      <img src="<%= rails_public_blob_url(speaker.avatar) %>" alt="<%= speaker.full_name %>" />
    <% end %>
  </figure>
<% end %>
